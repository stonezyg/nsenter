#/bin/sh
#TEXT: XXX Check
#Return  0:True, 1:False, 2 N/A


# ==== Check N/A conditions ====

if ! ls /etc/crontab > /dev/null 
then 
  echo "== N/A ==" 
  exit 2  
fi

# ==== Check FAILED conditions ====
if ! grep  '^MAILTO=""' /etc/crontab  > /dev/null
then 
  echo "== Failed =="
  exit 1
fi  


# ==== Success 
echo "== Success =="
exit 0

